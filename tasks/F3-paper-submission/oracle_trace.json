{
  "task_id": "F3-2025-PAPERSUB",
  "steps": [
    {
      "t": 0,
      "act": "open",
      "url": "http://localhost:8014/work.local/paper-submission.html",
      "note": "Open paper submission page"
    },
    {
      "t": 1,
      "act": "click",
      "selector": "button:has-text('提交新论文')",
      "note": "Click submit new paper button"
    },
    {
      "t": 2,
      "act": "type",
      "selector": "#paper-title",
      "value": "量子计算新进展",
      "note": "Enter paper title"
    },
    {
      "t": 3,
      "act": "type",
      "selector": "#journal-name",
      "value": "Nature Physics",
      "note": "Enter journal name"
    },
    {
      "t": 4,
      "act": "type",
      "selector": "#authors",
      "value": "张三, 李四",
      "note": "Enter authors"
    },
    {
      "t": 5,
      "act": "type",
      "selector": "#paper-file",
      "value": "quantum_paper.pdf",
      "note": "Enter file name"
    },
    {
      "t": 6,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Confirm submission"
    },
    {
      "t": 7,
      "act": "wait",
      "selector": "#submissions-list .card .badge:has-text('submitted')",
      "note": "Wait for submission to appear and status to be submitted"
    },
    {
      "t": 8,
      "act": "click",
      "selector": "button:has-text('支付版面费')",
      "note": "Click pay publication fees button"
    },
    {
      "t": 9,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Confirm payment"
    },
    {
      "t": 10,
      "act": "wait",
      "selector": "#submissions-list .card .badge:has-text('submitted') + .badge:has-text('已支付')",
      "note": "Wait for fees paid status to update"
    }
  ]
}
