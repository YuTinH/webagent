{
  "task_id": "D1-2025-BILLAGG",
  "steps": [
    {
      "t": 0,
      "act": "open",
      "url": "http://localhost:8014/bank.local/bill-aggregation.html",
      "note": "Open bill aggregation page"
    },
    {
      "t": 1,
      "act": "click",
      "selector": "button:has-text('添加账单来源')",
      "note": "Click add bill source button"
    },
    {
      "t": 2,
      "act": "type",
      "selector": "#new-name",
      "value": "电力公司",
      "note": "Enter source name"
    },
    {
      "t": 3,
      "act": "select",
      "selector": "#new-type",
      "value": "utility",
      "note": "Select source type"
    },
    {
      "t": 4,
      "act": "type",
      "selector": "#new-account-id",
      "value": "ACCT-12345",
      "note": "Enter account ID"
    },
    {
      "t": 5,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Confirm adding source"
    },
    {
      "t": 6,
      "act": "wait",
      "selector": "#bill-sources-list .card",
      "note": "Wait for bill source to appear in list"
    },
    {
      "t": 7,
      "act": "click",
      "selector": "button:has-text('立即同步')",
      "note": "Click sync button for the newly added source"
    },
    {
      "t": 8,
      "act": "wait",
      "selector": "#bill-sources-list .card div:has-text('上次同步')",
      "note": "Wait for last synced text to appear"
    }
  ]
}
