{
  "task_id": "E1-2025-FLIGHT",
  "steps": [
    {
      "t": 0,
      "act": "open",
      "url": "http://localhost:8014/trip.local/flights.html",
      "note": "Open flight booking page"
    },
    {
      "t": 2,
      "act": "type",
      "selector": "#departure",
      "value": "北京",
      "note": "Enter departure city"
    },
    {
      "t": 4,
      "act": "type",
      "selector": "#destination",
      "value": "上海",
      "note": "Enter destination city"
    },
    {
      "t": 6,
      "act": "type",
      "selector": "#depart-date",
      "value": "2025-12-31",
      "note": "Enter departure date"
    },
    {
      "t": 8,
      "act": "type",
      "selector": "#passengers",
      "value": "1",
      "note": "Enter number of passengers"
    },
    {
      "t": 10,
      "act": "select",
      "selector": "#class",
      "value": "economy",
      "note": "Select economy class"
    },
    {
      "t": 12,
      "act": "click",
      "selector": "button.btn.pri.lg:has-text('搜索航班')",
      "note": "Click search flights button"
    },
    {
      "t": 14,
      "act": "wait",
      "selector": ".flight-item",
      "note": "Wait for flight results to load"
    },
    {
      "t": 16,
      "act": "click",
      "selector": ".flight-item:has(h3:has-text('CA1881')) button.btn.pri:has-text('预订')",
      "note": "Click book button for flight CA1881"
    },
    {
      "t": 18,
      "act": "wait",
      "selector": "h1:has-text('我的行程')",
      "note": "Wait for trip management page to load"
    }
  ]
}