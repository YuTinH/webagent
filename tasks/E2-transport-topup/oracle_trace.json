{
  "task_id": "E2-2025-TOPUP",
  "steps": [
    {
      "t": 0,
      "act": "open",
      "url": "http://localhost:8014/trip.local/transport-card.html",
      "note": "Open transport card management page"
    },
    {
      "t": 1,
      "act": "click",
      "selector": "button:has-text('+ 充值')",
      "note": "Click top-up button"
    },
    {
      "t": 2,
      "act": "click",
      "selector": "button:has-text('¥100')",
      "note": "Select 100 RMB amount"
    },
    {
      "t": 3,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Confirm top-up"
    },
    {
      "t": 4,
      "act": "wait",
      "selector": "#card-balance",
      "note": "Wait for balance update"
    },
    {
      "t": 5,
      "act": "click",
      "selector": "button:has-text('设置自动充值')",
      "note": "Click auto-recharge settings button"
    },
    {
      "t": 6,
      "act": "click",
      "selector": "#ar-enable",
      "note": "Enable auto-recharge"
    },
    {
      "t": 7,
      "act": "type",
      "selector": "#ar-threshold",
      "value": "20",
      "note": "Set threshold to 20"
    },
    {
      "t": 8,
      "act": "type",
      "selector": "#ar-amount",
      "value": "50",
      "note": "Set recharge amount to 50"
    },
    {
      "t": 9,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Save auto-recharge settings"
    },
    {
      "t": 10,
      "act": "wait",
      "selector": "#auto-recharge-status:has-text('已开启')",
      "note": "Wait for auto-recharge status to update"
    }
  ]
}
