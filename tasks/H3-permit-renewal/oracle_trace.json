{
  "task_id": "H3-2025-RENEWAL",
  "steps": [
    {
      "t": 0,
      "act": "open",
      "url": "http://localhost:8014/gov.local/permits.html",
      "note": "Open permits list page"
    },
    {
      "t": 2,
      "act": "wait",
      "selector": "#permit-expiry",
      "note": "Wait for permit list to load"
    },
    {
      "t": 4,
      "act": "click",
      "selector": ".permit-card:has(.permit-id:has-text('RP-2024-77')) button:has-text('续期')",
      "note": "Click renew button for RP-2024-77"
    },
    {
      "t": 6,
      "act": "wait",
      "selector": "#new-expiry",
      "note": "Wait for renewal form to load"
    },
    {
      "t": 8,
      "act": "type",
      "selector": "#new-expiry",
      "value": "2026-12-01",
      "note": "Enter new expiry date"
    },
    {
      "t": 10,
      "act": "select",
      "selector": "#payment-method",
      "value": "card",
      "note": "Select payment method"
    },
    {
      "t": 12,
      "act": "click",
      "selector": "button.btn.pri.lg:has-text('提交续期')",
      "note": "Submit renewal form"
    },
    {
      "t": 14,
      "act": "wait",
      "selector": "h1:has-text('我的许可')",
      "note": "Wait for permits list page to load after renewal"
    }
  ]
}