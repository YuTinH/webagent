{
  "task_id": "F1-2025-CALENDAR",
  "steps": [
    {
      "t": 0,
      "act": "open",
      "url": "http://localhost:8014/work.local/calendar.html",
      "note": "Open calendar management page"
    },
    {
      "t": 1,
      "act": "click",
      "selector": "button:has-text('添加事件')",
      "note": "Click add event button"
    },
    {
      "t": 2,
      "act": "type",
      "selector": "#event-title",
      "value": "团队会议",
      "note": "Enter work event title"
    },
    {
      "t": 3,
      "act": "type",
      "selector": "#event-date",
      "value": "2026-01-15",
      "note": "Enter event date"
    },
    {
      "t": 4,
      "act": "type",
      "selector": "#event-time",
      "value": "10:00",
      "note": "Enter event time"
    },
    {
      "t": 5,
      "act": "select",
      "selector": "#event-type",
      "value": "work",
      "note": "Select event type as work"
    },
    {
      "t": 6,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Confirm adding work event"
    },
    {
      "t": 7,
      "act": "wait",
      "selector": "#event-list .card",
      "note": "Wait for event to appear in list"
    },
    {
      "t": 8,
      "act": "click",
      "selector": "button:has-text('添加事件')",
      "note": "Click add event button again"
    },
    {
      "t": 9,
      "act": "type",
      "selector": "#event-title",
      "value": "牙医预约",
      "note": "Enter personal event title"
    },
    {
      "t": 10,
      "act": "type",
      "selector": "#event-date",
      "value": "2026-01-15",
      "note": "Enter same event date"
    },
    {
      "t": 11,
      "act": "type",
      "selector": "#event-time",
      "value": "10:00",
      "note": "Enter same event time"
    },
    {
      "t": 12,
      "act": "select",
      "selector": "#event-type",
      "value": "personal",
      "note": "Select event type as personal"
    },
    {
      "t": 13,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Confirm adding personal event (should create conflict)"
    },
    {
      "t": 14,
      "act": "wait",
      "selector": ".calendar-event.conflict",
      "note": "Wait for conflict to appear"
    },
    {
      "t": 15,
      "act": "click",
      "selector": "button:has-text('解决冲突')",
      "note": "Click resolve conflict button for the last added event"
    },
    {
      "t": 16,
      "act": "click",
      "selector": ".modal-confirm",
      "note": "Confirm conflict resolution"
    },
    {
      "t": 17,
      "act": "wait",
      "selector": "#event-list .card .badge.ok",
      "note": "Wait for event status to become resolved"
    }
  ]
}
